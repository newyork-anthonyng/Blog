<h1>Edit Post</h1>

<% if @post.errors.any? %>
  <h3><%= pluralize(@post.errors.count, "error") %> found.</h3>
  <ul>
    <% @post.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post, url: user_post_path do |f| %>
  <p>
    <%= f.text_field :title, placeholder: "title" %><br>
    <%= f.text_field :description, placeholder: "description" %><br>
    <%= f.text_field :project_url, placeholder: "link to project" %><br>
    <%= f.text_field :blog_url, placeholder: "link to blog" %><br>
    <%= f.text_field :category, placeholder: "category" %><br>
  </p>
  <p>
    <%= f.submit "Edit Post" %>
  </p>
<% end %>

<%= link_to "<< Back", user_path(@user) %>
