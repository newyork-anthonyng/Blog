<h1>Create a new post</h1>

<%= render partial: "error" %>

<%= form_for([@user, @post]) do |f| %>
  <p>
    <%= f.text_field :title, placeholder: "title" %><br>
    <%= f.text_field :description, placeholder: "description" %><br>
    <%= f.text_field :project_url, placeholder: "link to project" %><br>
    <%= f.text_field :blog_url, placeholder: "link to blog" %><br>
    <%= f.text_field :category, placeholder: "category" %>
    <%= f.label "Current categories: Project" %>
  </p>
  <p>
    <%= f.submit "Create new post" %>
  </p>
<% end %>

<%= link_to "<< Back", user_path(@user) %>
